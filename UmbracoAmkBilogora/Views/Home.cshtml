                    </div>
                    <div class="profile-header-container">
                        <div class="profile-header-img">
                            <img class="img-circle" src="~/images/clanovi/ttul.jpg" />
                            <!-- badge -->
                            <div class="rank-label-container">
                                <span class="label label-default rank-label">KTM EXC 450</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact section-spacing" id="contact">
    <div class="container">
        <h2 class="text-center">Kontaktirajte nas!</h2>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <div class="contact-form">
                    <form asp-controller="Home" asp-action="ContactMail" method="post" id="contact-form" role="form">
                        <input type="text" autocomplete="off" class="wow fadeInUp form-control" name="name" id="name" placeholder="Ime" required>
                        <input type="email" autocomplete="off" class="wow fadeInUp form-control" name="mail" id="email" placeholder="E-mail adresa" required>
                        <textarea class="wow fadeInUp form-control" name="message" id="message" rows="3" placeholder="Vaša poruka" required></textarea>
                        <button type="submit" class="wow fadeInUp btn btn-default submit-btn" id="submit-btn" value="Send">Pošalji</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="contact section-spacing" id="contact">
    <div class="container">
        <h2 class="text-center">Lokacija</h2>
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div id="map-canvas"></div>
            </div>
        </div>
    </div>
</section>
<div id="preloader">
    <div id="status"></div>
</div>
